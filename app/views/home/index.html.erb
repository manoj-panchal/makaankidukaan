<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5">Discover a place youâ€™ll love to live</h1>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <%= form_tag houses_path, class: 'search-form', id: "vendor-search-form", method: :get do %>
          <div class="form-row">
            <div class="col-12 col-md-9 mb-2 mb-md-0">
              <%= text_field_tag :search, "", class: "form-control form-control-lg", placeholder: "Search by Location", id: "searchLocation" %>
              <%= hidden_field_tag :lat, "",id: "latitude" %>
              <%= hidden_field_tag :long, "",id: "longitude" %>
            </div>
            <div class="col-12 col-md-3">
             <%= submit_tag "Search", class: 'btn btn-block btn-lg btn-primary home-search-btn' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
    

   
